// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bots      Bot[]
}

model Bot {
  id        Int      @id @default(autoincrement())
  name      String
  scenario  String   @default("{}") // JSON string of the bot flow
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  clients   Client[]
  messages  Message[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id        Int      @id @default(autoincrement())
  phone     String
  name      String?
  botId     Int
  bot       Bot      @relation(fields: [botId], references: [id])
  currentStepId String? // ID of the current node in the bot scenario
  variables String @default("{}") // JSON string of user variables
  messages  Message[]
  deals     Deal[]
  tags      Tag[] // Added for tag filtering
  appointments  Appointment[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([phone, botId])
}

model Tag {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  color     String   @default("#3b82f6") // Default blue
  clients   Client[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id          Int           @id @default(autoincrement())
  name        String
  duration    Int           @default(30) // Duration in minutes
  price       Float         @default(0.0)
  description String?
  appointments Appointment[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Appointment {
  id        Int      @id @default(autoincrement())
  startTime DateTime
  endTime   DateTime
  status    String   @default("scheduled") // scheduled, cancelled, completed
  notes     String?
  
  clientId  Int
  client    Client   @relation(fields: [clientId], references: [id])
  
  serviceId Int
  service   Service  @relation(fields: [serviceId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Message {
  id        Int      @id @default(autoincrement())
  content   String?
  type      String   @default("text") // text, image, document
  mediaUrl  String?
  direction String   @default("inbound") // inbound, outbound
  sender    String   // "user" or "bot"
  clientId  Int
  client    Client   @relation(fields: [clientId], references: [id])
  botId     Int
  bot       Bot      @relation(fields: [botId], references: [id])
  createdAt DateTime @default(now())
}

model Deal {
  id        Int      @id @default(autoincrement())
  status    String   // "new", "in_progress", "closed_won", "closed_lost"
  value     Float    @default(0)
  clientId  Int
  client    Client   @relation(fields: [clientId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SystemSetting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
